<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.App.DatePicker" parent="@style/ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/color_03786D</item>
        <item name="colorOnPrimary">#8EDDD6</item>
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.App.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.App.MediumComponent
        </item>
        <item name="textInputStyle">@style/Widget.Design.TextInputLayout</item>
    </style>
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">cut</item>
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerSize">16dp</item>
    </style>

    <style name="StyleButton">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleTextViewAuth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="StyleTextInputLayout" parent="StyleTextInputLayoutParent">
        <item name="android:layout_marginLeft">@dimen/dp_30</item>
        <item name="android:layout_marginRight">@dimen/dp_30</item>
    </style>

    <style name="StyleTextInputLayoutParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/color_C8CCCCCC</item>
    </style>

    <style name="StyleButtonAuth" parent="StyleButtonAuthParent">
        <item name="android:layout_marginLeft">@dimen/dp_30</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_30</item>
        <item name="android:background">@drawable/bg_button_selector_auth</item>
    </style>

    <style name="StyleButtonAuthParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/sp_22</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleImageButtonAuth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/dp_120</item>
        <item name="android:background">@drawable/bg_button_circle</item>
        <item name="android:padding">@dimen/dp_5</item>
    </style>

    <style name="StyleTextSignUp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_50</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_03786D</item>
        <item name="android:textSize">@dimen/sp_40</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleCheckboxAuth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/color_03786D</item>
        <item name="android:textColor">@color/color_7E000000</item>
    </style>

    <style name="StyleTextStepAuth">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_30</item>
        <item name="android:textColor">@color/color_03786D</item>
        <item name="android:textSize">@dimen/sp_30</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleTextInputEditField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/color_03786D</item>
    </style>

    <style name="StyleLinearLayoutProfile">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/sp_30</item>
        <item name="android:layout_marginRight">@dimen/sp_30</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="StyleRadioButtonAuth">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/color_03786D</item>
        <item name="android:textColor">@color/color_7E000000</item>
    </style>

    <style name="StyleTextPicture">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_7E000000</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleTextTitlePhoto">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_03786D</item>
        <item name="android:textSize">@dimen/sp_30</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>