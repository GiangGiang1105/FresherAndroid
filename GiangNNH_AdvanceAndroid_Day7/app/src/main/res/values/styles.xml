<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">56dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:background">@color/color_E57373</item>
        <item name="android:theme">@style/Theme.AppCompat.Light.DarkActionBar</item>
    </style>

    <style name="StyleTitleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_30</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/teal_700</item>
        <item name="android:textSize">@dimen/sp_30</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleTextInputLayout" parent="StyleTextInputLayoutParent">
        <item name="android:layout_marginLeft">@dimen/dp_30</item>
        <item name="android:layout_marginRight">@dimen/dp_30</item>
    </style>

    <style name="StyleTextInputLayoutParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorHint">@color/color_368F8F</item>
    </style>

    <style name="StyleTextInputEditField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/teal_700</item>
    </style>

    <style name="StyleRadioButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:buttonTint">@color/color_368F8F</item>
        <item name="android:textColor">@color/color_368F8F</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="StyleButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_30</item>
        <item name="android:layout_marginTop">@dimen/dp_20</item>
        <item name="android:layout_marginRight">@dimen/dp_30</item>
        <item name="android:background">@drawable/bg_button_selector</item>
    </style>

    <style name="StyleSearchView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/dp_10</item>
        <item name="android:background">@drawable/bg_search_view</item>
        <item name="android:outlineSpotShadowColor">@color/teal_700</item>
    </style>

    <style name="StyleRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/dp_30</item>
        <item name="android:layout_marginRight">@dimen/dp_30</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="StyleButtonDialog">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/sp_20</item>
        <item name="android:textColor">@color/color_368F8F</item>
        <item name="background">@drawable/bg_button_selector</item>
    </style>
</resources>