<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/dp_30</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_F44336</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/sp_25</item>
    </style>

    <style name="StyleButton">
        <item name="android:layout_height">@dimen/dp_50</item>
        <item name="android:layout_width">@dimen/dp_150</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">@dimen/dp_20</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>