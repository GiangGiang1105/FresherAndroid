<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_150"
    android:background="@color/color_F8D3D3"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/notificationImageView"
        android:layout_width="@dimen/dp_150"
        android:layout_height="@dimen/dp_150"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/dp_4"
        android:padding="@dimen/dp_7"
        android:scaleType="centerInside" />

    <LinearLayout
        android:layout_width="@dimen/dp_0"
        android:layout_height="@dimen/dp_80"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_5">

        <TextView
            android:id="@+id/titleTextView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:marqueeRepeatLimit="marquee_forever"
            android:paddingTop="@dimen/dp_10"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="@string/text_rich"
            android:textColor="@color/color_05145E"
            android:textSize="@dimen/sp_20" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginBottom="@dimen/dp_5"
            android:layout_weight="0.8"
            android:gravity="center"
            android:weightSum="3">

            <ImageButton
                android:id="@+id/previousImageButton"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_weight="1"
                android:layout_marginRight="@dimen/dp_20"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_back" />

            <ImageButton
                android:id="@+id/pauseImageButton"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_pause" />

            <ImageButton
                android:id="@+id/nextImageButton"
                android:layout_width="@dimen/dp_30"
                android:layout_height="@dimen/dp_30"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_weight="1"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/ic_next" />

        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/closeImageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@null"
        android:gravity="right"
        android:padding="@dimen/dp_4"
        android:scaleType="fitXY"
        android:src="@drawable/ic_close_media" />
</LinearLayout>