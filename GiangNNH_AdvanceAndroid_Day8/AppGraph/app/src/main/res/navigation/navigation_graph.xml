<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/columnChartFragment">

    <fragment
        android:id="@+id/columnChartFragment"
        android:name="com.example.appgraph.screen.fragment.ColumnChartFragment"
        android:label="@string/title_column_chart"
        tools:layout="@layout/fragment_column_chart" >
        <action
            android:id="@+id/action_columnChartFragment_to_pieChartFragment"
            app:destination="@id/pieChartFragment" />
    </fragment>
    <fragment
        android:id="@+id/pieChartFragment"
        android:name="com.example.appgraph.screen.fragment.PieChartFragment"
        android:label="@string/title_pie_chart"
        tools:layout="@layout/fragment_pie_chart" >
        <action
            android:id="@+id/action_pieChartFragment_to_columnChartFragment"
            app:destination="@id/columnChartFragment" />
    </fragment>
</navigation>