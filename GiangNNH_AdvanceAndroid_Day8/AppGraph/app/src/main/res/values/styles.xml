<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="StyleTitleView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp_30</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/color_03786D</item>
        <item name="android:textSize">@dimen/sp_30</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="StyleTextTitleValue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
    </style>

    <style name="StyleTextSeekBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">@dimen/dp_10</item>
        <item name="android:min">0</item>
        <item name="android:max">100</item>
    </style>
</resources>